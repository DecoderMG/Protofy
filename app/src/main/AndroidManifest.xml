    android:versionCode="6"
    android:versionName="1.1.3.1">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_app_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.underground.protofy.NonWhiteboard.IntroScreenActivity"
            android:label="Protofy"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.underground.protofy.Whiteboard.Dialogs"
            android:label="Dialogs" />
        <activity
            android:name="com.underground.protofy.Whiteboard.MainActivity"
            android:label="Whiteboard"
            android:configChanges="orientation|screenSize" />
        <!--
        <activity
